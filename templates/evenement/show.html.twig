{% extends 'base.html.twig' %}

{% block title %}{{ evenement.titre }}{% endblock %}

{% block body %}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div role="alert" class="alert alert-{{ label == 'success' ? 'success' : 'error' }} mb-4">
                <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
                <span>{{ message }}</span>
            </div>
        {% endfor %}
    {% endfor %}

    <div class="card lg:card-side bg-base-100 shadow-xl">
        {% if evenement.image %}
            <figure class="lg:w-1/3"><img src="{{ evenement.image }}" alt="{{ evenement.titre }}" class="w-full h-full object-cover" /></figure>
        {% endif %}
        <div class="card-body">
            <h1 class="card-title text-3xl">{{ evenement.titre }}</h1>
            <div class="badge" style="background-color: {{ evenement.relation.couleur }}">{{ evenement.relation.icone }} {{ evenement.relation.nom }}</div>

            <p class="text-lg">{{ evenement.description }}</p>

            <div class="divider"></div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div class="flex items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-2 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                    <span class="font-bold mr-2">Date :</span> {{ evenement.date ? evenement.date|date('d/m/Y') : 'Non définie' }}
                </div>
                <div class="flex items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-2 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                    <span class="font-bold mr-2">Lieu :</span> {{ evenement.lieu }}
                </div>
            </div>

            <div class="card-actions justify-end mt-6">
                <a href="{{ path('app_evenement_index') }}" class="btn btn-ghost">Retour à la liste</a>
                <a href="{{ path('app_inscription_new', {'id': evenement.id}) }}" class="btn btn-primary">S'inscrire à cet événement</a>
            </div>
        </div>
    </div>
{% endblock %}
