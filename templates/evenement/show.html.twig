{% extends 'base.html.twig' %}

{% block title %}{{ evenement.titre }}{% endblock %}

{% block body %}
    <div class="container mt-4">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        <h1>{{ evenement.titre }}</h1>

        <div class="card mb-4">
            {% if evenement.image %}
                <img src="{{ evenement.image }}" class="card-img-top" alt="{{ evenement.titre }}">
            {% endif %}
            <div class="card-body">
                <p class="card-text">{{ evenement.description }}</p>
                <p><strong>Date :</strong> {{ evenement.date ? evenement.date|date('d/m/Y') : 'Non définie' }}</p>
                <p><strong>Lieu :</strong> {{ evenement.lieu }}</p>
                <p><strong>Catégorie :</strong> {{ evenement.relation.nom }}</p>
            </div>
        </div>

        <a href="{{ path('app_inscription_new', {'id': evenement.id}) }}" class="btn btn-primary">S'inscrire à cet événement</a>
        <a href="{{ path('app_events') }}" class="btn btn-secondary">Retour à la liste</a>
    </div>
{% endblock %}
