{% extends 'base.html.twig' %}

{% block title %}Événements{% endblock %}

{% block body %}
<table class="table table-striped">
    <thead>
    <tr>
        <th>Titre</th>
        <th>Date</th>
        <th>Lieu</th>
        <th>Catégorie</th>
    </tr>
    </thead>
    <tbody id="events-body">
    {% for e in evenements %}
        <tr>
            <td><a href="{{ path('app_evenement_show', {'id': e.id}) }}">{{ e.titre }}</a></td>
            <td>{{ e.date|date('d/m/Y') }}</td>
            <td>{{ e.lieu }}</td>
            <td>{{ e.relation.nom }}</td>
        </tr>
    {% else %}
        <tr>
            <td colspan="4">Aucun événement à venir</td>
        </tr>
    {% endfor %}
    </tbody>
</table>

{% endblock %}
