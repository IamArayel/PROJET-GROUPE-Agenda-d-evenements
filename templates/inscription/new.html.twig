{% extends 'base.html.twig' %}

{% block title %}Inscription à {{ evenement.titre }}{% endblock %}

{% block body %}
    <div class="container mt-4">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        <h1>Inscription à l'événement : {{ evenement.titre }}</h1>

        <div class="card mb-4">
            <div class="card-body">
                <p><strong>Date :</strong> {{ evenement.date ? evenement.date|date('d/m/Y') : 'Non définie' }}</p>
                <p><strong>Lieu :</strong> {{ evenement.lieu }}</p>
            </div>
        </div>

        {{ form_start(form) }}
            {{ form_widget(form) }}
            <button class="btn btn-primary mt-3">{{ button_label|default("S'inscrire") }}</button>
        {{ form_end(form) }}

        <a href="{{ path('app_evenement_show', {'id': evenement.id}) }}" class="btn btn-secondary mt-3">Retour à l'événement</a>
    </div>
{% endblock %}
